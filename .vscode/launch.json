    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Flask",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true,
            "autoStartBrowser": false,
        },
        {
            "name": "Python Debugger: Migration",
            "type": "debugpy",
            "request": "launch",
            "program": "./job migration/obsidian_importer.py",
            "args": [
                "C:\\Users\\hugof\\Obsidian\\MainVault\\01 - Projects\\Job Search\\03 - Applications\\Applications",
                "--debug",
            ],
        }
    ]
}